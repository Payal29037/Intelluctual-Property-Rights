# ===========================================
# IP REGISTRY BACKEND - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and update the values

# ==================== SERVER CONFIGURATION ====================
NODE_ENV=development
PORT=5000

# ==================== DATABASE CONFIGURATION ====================
# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://ipr_user:ipr_password@localhost:5432/ipr_backend

# ==================== JWT CONFIGURATION ====================
# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
# Generate a secure key: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production_1234567890abcdef

# ==================== IPFS CONFIGURATION ====================
# IPFS API Endpoint
# Local IPFS node
IPFS_API_URL=http://localhost:5001
# Or use a public IPFS gateway
# IPFS_API_URL=https://ipfs.infura.io:5001

# IPFS Gateway for content access
IPFS_GATEWAY=https://ipfs.io/ipfs/

# ==================== WEB3 CONFIGURATION ====================
# Web3 Provider URL (Ethereum/Polygon)
# Mainnet
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
# Or Polygon
# WEB3_PROVIDER_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
# Or local development (Ganache/Hardhat)
# WEB3_PROVIDER_URL=http://localhost:8545

# Private key for contract interactions (KEEP SECURE!)
# This should be a wallet with some ETH for gas fees
PRIVATE_KEY=0x1234567890123456789012345678901234567890123456789012345678901234

# Gas configuration
GAS_PRICE=20000000000
GAS_LIMIT=500000
CONFIRMATIONS_REQUIRED=1

# ==================== MARKETPLACE CONTRACT ====================
# Deployed Marketplace Contract Address
# Replace with your actual deployed contract address
MARKETPLACE_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# ==================== IP REGISTRY CONTRACT ====================
# Deployed IP Registry Contract Address (required for IP registration flow)
# Replace with your actual deployed contract address after deploying IPRManagement
IP_REGISTRY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ==================== ANTI-PIRACY & IP PROTECTION ====================
# Enable anti-piracy detection
ENABLE_ANTI_PIRACY=true

# Supported blockchain networks
SUPPORTED_CHAINS=ethereum,polygon,arbitrum,optimism

# ==================== LEGAL COMPLIANCE ====================
# Legal jurisdictions for compliance
LEGAL_JURISDICTIONS=US,EU,IN,CA,AU

# Compliance contact email
COMPLIANCE_CONTACT=support@ipregistry.com

# ==================== LOGGING & MONITORING ====================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable feature flags
ENABLE_FEATURE_X=false

# ==================== RATE LIMITING ====================
# Rate limit (requests per 15 minutes)
RATE_LIMIT=3000

# ==================== EMAIL CONFIGURATION ====================
# SMTP Configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email templates
EMAIL_FROM=noreply@ipregistry.com
EMAIL_FROM_NAME=IP Registry

# ==================== FILE UPLOAD CONFIGURATION ====================
# Maximum file size (in bytes)
MAX_FILE_SIZE=10485760

# Allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Upload directory
UPLOAD_DIR=uploads

# ==================== CACHE CONFIGURATION ====================
# Redis configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Cache TTL (time to live in seconds)
CACHE_TTL=3600

# ==================== MONITORING & ANALYTICS ====================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Google Analytics ID (optional)
GA_TRACKING_ID=

# ==================== DEVELOPMENT CONFIGURATION ====================
# Enable debug mode
DEBUG=false

# Enable API documentation
ENABLE_API_DOCS=true

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ==================== PRODUCTION CONFIGURATION ====================
# SSL/TLS Configuration
SSL_CERT_PATH=
SSL_KEY_PATH=

# Trust proxy (for load balancers)
TRUST_PROXY=true

# ==================== BACKUP CONFIGURATION ====================
# Database backup configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ==================== SECURITY CONFIGURATION ====================
# Session secret
SESSION_SECRET=your_session_secret_key_change_this_in_production

# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_32_characters_long

# ==================== API CONFIGURATION ====================
# API version
API_VERSION=v1

# API prefix
API_PREFIX=/api

# Enable API rate limiting
API_RATE_LIMIT_ENABLED=true

# ==================== FEATURE FLAGS ====================
# Enable marketplace features
ENABLE_MARKETPLACE=true

# Enable IP asset trading
ENABLE_TRADING=true

# Enable NFT features
ENABLE_NFT=true

# Enable analytics
ENABLE_ANALYTICS=true

# ==================== NOTIFICATION CONFIGURATION ====================
# Webhook URLs for notifications
WEBHOOK_URL=

# Notification settings
NOTIFY_ON_REGISTRATION=true
NOTIFY_ON_VERIFICATION=true
NOTIFY_ON_PURCHASE=true

# ==================== TESTING CONFIGURATION ====================
# Test database URL
TEST_DATABASE_URL=postgresql://ipr_test:ipr_test_password@localhost:5432/ipr_backend_test

# Test JWT secret
TEST_JWT_SECRET=test_jwt_secret_key

# ==================== DEPLOYMENT CONFIGURATION ====================
# Deployment environment
DEPLOYMENT_ENV=development

# Health check timeout
HEALTH_CHECK_TIMEOUT=5000

# Graceful shutdown timeout
SHUTDOWN_TIMEOUT=10000
